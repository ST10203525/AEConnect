@model IEnumerable<Farmer>

@{
    ViewData["Title"] = "All Farmers";
}

<h2>Farmers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FullName</td>
                <td>@farmer.Email</td>
                <td>@farmer.PhoneNumber</td>
                <td>@farmer.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@farmer.FarmerId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
